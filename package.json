{
  "name": "sdd-tool",
  "version": "1.3.0",
  "description": "Unified Spec-Driven Development CLI - AI-first specification workflow",
  "type": "module",
  "bin": {
    "sdd": "bin/sdd.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakeB-5/sdd-tool.git"
  },
  "homepage": "https://github.com/JakeB-5/sdd-tool#readme",
  "bugs": {
    "url": "https://github.com/JakeB-5/sdd-tool/issues"
  },
  "author": "JakeB-5",
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^20.17.10",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.16.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vitepress": "^1.5.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.1",
  "files": [
    "dist",
    "bin",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "sdd",
    "spec-driven-development",
    "specification",
    "cli",
    "ai",
    "workflow",
    "rfc2119",
    "given-when-then",
    "bdd"
  ],
  "license": "MIT"
}
