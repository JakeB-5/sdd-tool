{
  "name": "sdd-tool",
  "version": "0.1.0",
  "description": "Unified Spec-Driven Development CLI",
  "type": "module",
  "bin": {
    "sdd": "./bin/sdd.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "zod": "^3.23.8",
    "chalk": "^5.3.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "tsup": "^8.3.5",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.1",
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "keywords": [
    "sdd",
    "spec-driven-development",
    "cli",
    "specification"
  ],
  "license": "MIT"
}
